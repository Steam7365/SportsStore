@model Order

<h2>结账</h2>
<p>请输入您的详细信息，我们将立即发货</p>

<div asp-validation-summary="All" class="text-dangers"></div>

<form asp-action="Checkout" method="post">
    <h3>666</h3>
    <div class="form-group">
        <label>姓名：</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label>地址1：</label>
        <input class="form-control" asp-for="Line1" />
    </div>

    <div class="form-group">
        <label>地址2：</label>
        <input class="form-control" asp-for="Line2" />
    </div>

    <div class="form-group">
        <label>地址3：</label>
        <input class="form-control" asp-for="Line3" />
    </div>

    <div class="form-group">
        <label>城市：</label>
        <input class="form-control" asp-for="City" />
    </div>

    <div class="form-group">
        <label>状态：</label>
        <input class="form-control" asp-for="State" />
    </div>

    <div class="form-group">
        <label>Zip：</label>
        <input class="form-control" asp-for="Zip" />
    </div>

    <div class="form-group">
        <label>国家：</label>
        <input class="form-control" asp-for="Country" />
    </div>
    <h3>8888</h3>
    <div class="checkbox">
        <label><input asp-for="GiftWrap" />礼品中包装这些物品</label>
    </div>
    <div class="text-center">
        <input type="submit" value="提交订单" class="btn btn-primary" />
    </div>
</form>